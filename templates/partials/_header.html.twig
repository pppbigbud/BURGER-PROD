<script>
    const activePage = window.location.pathname
    const links = document.querySelectorAll('.burgertacos')

    links.forEach(bloc => {
        // changement d'opacité en fonction au :hover
        bloc.addEventListener('mouseover', () => {
            bloc.style.opacity = "1";
        });
        bloc.addEventListener('mouseout', () => {
            bloc.style.opacity = "0.75";
        });

        // condition pour vérifier la page active
        if (activePage !== "/") {
            if (bloc.href.includes(activePage)) {
                //Si page active alors l'élement (barre orange) apparait
                bloc.nextElementSibling.style.display = "block"
                //Egalement l'opacité passe a 100%
                bloc.style.opacity = "1";
                //Au hover l'opacité reste a 100% si lien actif
                bloc.addEventListener('mouseout', () => {
                    bloc.style.opacity = "1";
                });

            } else {
                //Si page active alors l'élement (barre orange) n'est pas présent
                bloc.nextElementSibling.style.display = "none"
                //Egalement l'opacité passe a 75%
                bloc.style.opacity = "0.75";
            }
        }
    })
</script>


