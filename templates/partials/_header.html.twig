<script>
    // Récupération de l'URL actuelle de la page
    const currentUrl = window.location.href;

    // Sélection de tous les liens dans notre menu
    const menuLinks = document.querySelectorAll('.menuRespBloc .menuResp li a');
    let menuTexts = document.getElementById("opacityTextMenu")
    console.log(menuTexts)

    // Pour chaque lien, on va vérifier s'il correspond à l'URL actuelle
    menuLinks.forEach(link => {
        if (link.href === currentUrl) {
            // Si le lien correspond à l'URL actuelle, on ajoute la classe "active"
            link.parentElement.classList.add('active');
        }
    });
</script>


<script>
    const logo = document.querySelector(".logoBlocDesktop")
    // console.log(logo)

    window.addEventListener('scroll', () => {
        if (window.scrollY > 100) {

            logo.classList.remove('logoBlocDesktop')
            logo.classList.add('miniSize')
        } else {
            logo.classList.add('logoBlocDesktop')
            logo.classList.remove('miniSize')
        }
    })
</script>
